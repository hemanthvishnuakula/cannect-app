{
  "rewrites": [
    {
      "source": "/user/:handle*",
      "destination": "/index.html"
    },
    {
      "source": "/post/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/((?!api|_next|_expo|sw\\.js|manifest\\.json|offline\\.html|icons|screenshots|reports).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
